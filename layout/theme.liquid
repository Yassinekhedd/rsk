<!doctype html>

<html class="no-js" lang="{{ request.locale.iso_code }}" dir="{% render 'direction' %}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="theme-color" content="{{ settings.header_background }}">

    <title>{% if page_title == blank %}{{ shop.name }}{% else %}{{ page_title }}{% if current_page != 1 %} &ndash; {{ 'general.page' | t: page: current_page }}{% endif %}{% endif %}</title>

    {%- if page_description -%}
      <meta name="description" content="{{ page_description | escape }}">
    {%- endif -%}

    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon -%}
      <link rel="shortcut icon" href="{{ settings.favicon | image_url: width: 96 }}">
      <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180 }}">
    {%- endif -%}

    <link rel="preconnect" href="https://cdn.shopify.com">
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    <link rel="dns-prefetch" href="https://productreviews.shopifycdn.com">

    {%- unless settings.heading_font.system? -%}
      <link rel="preload" href="{{ settings.heading_font | font_url }}" as="font" type="font/woff2" crossorigin>
    {%- endunless -%}

    {%- unless settings.text_font.system? -%}
      <link rel="preload" href="{{ settings.text_font | font_url }}" as="font" type="font/woff2" crossorigin>
    {%- endunless -%}

    {%- render 'social-meta-tags' -%}
    {%- render 'microdata-schema' -%}
    {%- render 'css-variables' -%}
    {%- render 'js-variables' -%}

    <script type="module" src="{{ 'vendor.min.js' | asset_url }}"></script>
    <script type="module" src="{{ 'theme.js' | asset_url }}"></script>
    <script type="module" src="{{ 'sections.js' | asset_url }}"></script>

    {{ content_for_header }}

    {{- 'theme.css' | asset_url | stylesheet_tag: preload: true -}}
  </head>

  <body class="{% if settings.show_page_transition %}page-transition{% endif %} {% if settings.zoom_image_on_hover %}zoom-image--enabled{% endif %}">
    {%- render 'shadow-dom-templates' -%}

    <a href="#main" class="skip-to-content sr-only">{{ 'general.accessibility.skip_to_content' | t }}</a>

    {%- if request.page_type != 'password' -%}
      {%- sections 'header-group' -%}
      {%- sections 'overlay-group' -%}

      {%- if settings.cart_type == 'popover' -%}
        <cart-notification-drawer open-from="bottom" class="quick-buy-drawer drawer"></cart-notification-drawer>
      {%- endif -%}

      <!-- üî• HEADER D‚ÄôURGENCE üî• -->
      <header class="emergency-header" role="banner">
        <div class="emh-container">
          <div class="emh-left">
            <a href="{{ routes.root_url }}" class="emh-logo" aria-label="{{ shop.name }}">
              {% if settings.logo != blank %}
                <img src="{{ settings.logo | image_url: width: 220 }}" alt="{{ shop.name | escape }}">
              {% else %}
                <span class="emh-logo-text">{{ shop.name }}</span>
              {% endif %}
            </a>
          </div>

          <div class="emh-center">
            <form class="emh-search" action="{{ routes.search_url }}" method="get" role="search">
              <input type="search" name="q" placeholder="Rechercher..." aria-label="Search">
              <button type="submit">üîç</button>
            </form>
          </div>

          <div class="emh-right">
            <a class="emh-cart" href="{{ routes.cart_url }}" aria-label="Panier">
              üõí <span class="emh-cart-count">{{ cart.item_count }}</span>
            </a>
          </div>
        </div>
      </header>

      <style>
        .emergency-header {
          position: sticky; top: 0; z-index: 99; background: #fff;
          border-bottom: 1px solid rgba(0,0,0,0.1); padding: 8px 16px;
        }
        .emh-container {
          max-width: 1200px; margin: 0 auto;
          display: flex; align-items: center; justify-content: space-between;
        }
        .emh-logo-text { font-weight: bold; font-size: 18px; color: #000; }
        .emh-search { display: flex; gap: 6px; align-items: center; }
        .emh-search input {
          padding: 6px 10px; border: 1px solid #ccc; border-radius: 4px; min-width: 200px;
        }
        .emh-search button {
          background: #000; color: #fff; border: none; padding: 6px 10px; border-radius: 4px; cursor: pointer;
        }
        .emh-cart { text-decoration: none; color: #000; font-weight: bold; position: relative; }
        .emh-cart-count {
          background: #000; color: #fff; border-radius: 10px;
          padding: 2px 6px; font-size: 12px; position: relative; top: -1px;
        }
      </style>
      <!-- üî• FIN DU HEADER D‚ÄôURGENCE -->
    {%- endif -%}

    {%- if request.page_type == 'customers/account' or request.page_type == 'customers/order' or request.page_type == 'customers/addresses' -%}
      {%- section 'account-banner' -%}
    {%- endif -%}

    <main role="main" id="main" class="anchor">
      {{ content_for_layout }}

      {%- if request.page_type != 'password' -%}
        {%- sections 'footer-group' -%}
      {%- endif -%}
    </main>
  </body>
</html>
