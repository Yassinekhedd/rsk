{%- if section.blocks.size > 0 -%}

  <div class="custom-rich-text"
       style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    <div class="prose text-{{ section.settings.text_position }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 {{ block.shopify_attributes }}>{{ block.settings.text }}</h2>
          {%- when 'richtext' -%}
            <div {{ block.shopify_attributes }}>{{ block.settings.content }}</div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>

{%- endif -%}

{% schema %}
{
  "name": "Compact Rich Text",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding haut",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bas",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 10
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Alignement texte",
      "options": [
        { "value": "start", "label": "Gauche" },
        { "value": "center", "label": "Centre" },
        { "value": "end", "label": "Droite" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Titre",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texte du titre",
          "default": "Mon titre"
        }
      ]
    },
    {
      "type": "richtext",
      "name": "Paragraphe",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Texte",
          "default": "<p>Mon texte de description</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Compact Rich Text",
      "blocks": [
        { "type": "heading" },
        { "type": "richtext" }
      ]
    }
  ]
}
{% endschema %}