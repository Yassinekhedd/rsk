{% schema %}
{
  "name": "Features Icons Section",
  "settings": [
    {
      "type": "header",
      "content": "Section de 4 icônes avec texte"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Bloc",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icône"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "SCHMÄLERT DIE TALIE"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Dank seines hochwertigen formenden Materials."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Icônes caractéristiques (4)",
      "category": "Contenu"
    }
  ]
}
{% endschema %}

<div class="features-icons-section" style="padding:60px 0; text-align:center;">
  <div class="features-grid" style="display:grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap:40px; max-width:1000px; margin:0 auto;">
    {% for block in section.blocks %}
      <div class="feature-item" style="display:flex; flex-direction:column; align-items:center;">
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | img_url: '200x' }}" alt="{{ block.settings.title }}" style="width:60px; height:auto; margin-bottom:15px;">
        {% endif %}
        <h3 style="font-weight:700; font-size:18px; margin-bottom:8px;">{{ block.settings.title }}</h3>
        <p style="color:#555; font-size:15px; max-width:220px; margin:0 auto;">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</div>